<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xtu.hrms.mapper.DeptMapper">
    <select id="getDeptById" resultType="com.xtu.hrms.bean.Dept">
        select * from dept where id=#{id}
    </select>

    <select id="getAllDepts" resultType="com.xtu.hrms.bean.Dept">
        select * from dept
    </select>

    <delete id="deleteDeptById">
        delete from dept where id=#{id}
    </delete>

    <insert id="addDept" parameterType="com.xtu.hrms.bean.Dept">
        insert into dept(name) values(#{name})
    </insert>

    <update id="updateDept" parameterType="com.xtu.hrms.bean.Dept">
        update dept set name=#{name} where id=#{id}
    </update>
</mapper>